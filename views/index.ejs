<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Todo - Nest JS</title>
    <meta name="viewport" content="height=device-height, initial-scale=1, user-scalable=no" />
    <meta name="description" content="Todo - Nest JS" />
    <link rel="shortcut icon" href="/favicon.png" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,700" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" />
    <link rel="stylesheet prefetch" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <link rel="stylesheet prefetch" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css" />
    <link rel="stylesheet prefetch" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="style.css" />
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-57635392-5"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'UA-57635392-5');
    </script>
  </head>
  <body class="body">
    <div class="logo">
      <img src="/favicon.png" alt="Image" style="width: 7%" />
    </div>

    <div class="container">
      <div class="today" style="margin-bottom: 20px"><%= randomWord %> <%= day %></div>
      <center>
        <a style="margin-bottom: 10px" href="/" type="button" class="btn btn-primary btn-lg">Home </a>
      </center>
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
          <div class="add-control">
            <div class="form-group has-feedback">
              <input type="text" name="content" class="form-control" placeholder="✍️ Add item..." />
              <input class="form-control" type="hidden" name="status" value="new" />
              <i class="fa fa-plus form-control-feedback add-btn" title="Add item"></i>
            </div>
          </div>
          <p class="err text-danger text-center hidden">
            <i class="fa fa-warning"></i>
            Oops! Please, enter content todo
          </p>
          <ul class="todo-list">
            <% if (Array.isArray(todos) && todos.length) { %> <%todos.forEach((el, index) => { %>
            <li data-id="<%= el._id %>" class="animated flipInX <% if (el.status == "done") { %> danger <% } %>">
              <div class="checkbox">
                <span class="close"><i class="fa fa-times"></i></span><label><span class="checkbox-mask"></span><input type="checkbox" /><%= el.content %></label>
              </div>
            </li>
            <% }); %> <% } %>
          </ul>
        </div>
      </div>
    </div>
    <div>
      <h4>
        Made by
        <a href="https://github.com/fawwaz37">Zekais</a>
        <p></p>
        Todo-list App with
        <a href="https://nestjs.com/">Nest JS</a>
      </h4>
    </div>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <script src="index.js"></script>
    <script src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js"></script>
  </body>
</html>
